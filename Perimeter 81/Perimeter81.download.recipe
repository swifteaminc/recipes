<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Description</key>
  <string>Downloads the current macOS Harmony SASE (Perimeter 81) agent .pkg by reading the latest version from Check Point release notes.</string>
  <key>Identifier</key>
  <string>com.github.swifteaminc.recipes.download.Perimeter81</string>

  <key>Input</key>
  <dict>
    <key>NAME</key><string>Perimeter81</string>
  </dict>

  <key>MinimumVersion</key>
  <string>1.1</string>

  <key>Process</key>
  <array>
    <!-- Find newest macOS agent version (topmost <h2> like 12.0.0.6063) -->
    <dict>
      <key>Processor</key><string>URLTextSearcher</string>
      <key>Arguments</key>
      <dict>
        <key>url</key>
        <string>https://sc1.checkpoint.com/documents/Infinity_Portal/WebAdminGuides/EN/SASE-Admin-Guide/Content/Topics-SASE-AG/Release-Notes/HS-Agent/MacOS.htm</string>
        <!-- match a 4-part version inside an H2 -->
        <key>re_pattern</key>
        <string>&lt;h2[^&gt;]*&gt;\s*([0-9]+(?:\.[0-9]+){3})\s*&lt;/h2&gt;</string>
        <key>result_output_var_name</key>
        <string>version</string>
      </dict>
    </dict>

    <!-- Download that exact version from the static CDN -->
    <dict>
      <key>Processor</key><string>URLDownloader</string>
      <key>Arguments</key>
      <dict>
        <key>url</key>
        <string>https://static.perimeter81.com/agents/mac/Harmony_SASE_%version%.pkg</string>
        <key>filename</key>
        <string>Harmony_SASE_%version%.pkg</string>
      </dict>
    </dict>

    <dict>
      <key>Processor</key><string>EndOfCheckPhase</string>
    </dict>

    <!-- Signature check (skipped if you pass DISABLE_CODE_SIGNATURE_VERIFICATION=true) -->
    <dict>
      <key>Processor</key><string>CodeSignatureVerifier</string>
      <key>Arguments</key>
      <dict>
        <key>input_path</key><string>%pathname%</string>
        <key>expected_authority_names</key>
        <array>
          <string>Developer ID Installer: Perimeter81 LTD (924635PD62)</string>
          <string>Developer ID Certification Authority</string>
          <string>Apple Root CA</string>
        </array>
      </dict>
    </dict>
  </array>
</dict>
</plist>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
   "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Description</key>
  <string>Downloads the specified Windsurf macOS Intel DMG.</string>
  <key>Identifier</key>
  <string>com.github.swifteaminc.recipes.download.windsurf</string>
  <key>MinimumVersion</key>
  <string>1.0.0</string>

  <key>Input</key>
  <dict>
    <!-- Direct URL to the Intel (x64) DMG -->
    <key>DOWNLOAD_URL</key>
    <string>https://windsurf-stable.codeiumdata.com/darwin-x64-dmg/stable/2a329a0a513ed199397a4f9ebb1c8267575a7ef0/Windsurf-darwin-x64-1.9552.25.dmg</string>
    <!-- Optional static version -->
    <key>VERSION</key>
    <string>1.10.5</string>
  </dict>

  <key>Process</key>
  <array>
    <!-- Download the DMG -->
    <dict>
      <key>Processor</key>
      <string>URLDownloader</string>
      <key>Arguments</key>
      <dict>
        <key>url</key>
        <string>%DOWNLOAD_URL%</string>
      </dict>
    </dict>

    <!-- End of the check phase -->
    <dict>
      <key>Processor</key>
      <string>EndOfCheckPhase</string>
    </dict>

    <!-- Read app version from the mounted DMG -->
    <dict>
      <key>Processor</key>
      <string>Versioner</string>
      <key>Arguments</key>
      <dict>
        <key>input_plist_path</key>
        <string>%pathname%/Windsurf.app/Contents/Info.plist</string>
        <key>plist_version_key</key>
        <string>CFBundleShortVersionString</string>
      </dict>
    </dict>
  </array>
</dict>
</plist>
